# Database Configuration
# Get from Neon.tech or any PostgreSQL provider
DATABASE_URL=postgresql://user:password@host:port/database?sslmode=require

# CORS Configuration
# Frontend URL for CORS (e.g., http://localhost:3001 for dev, https://yourdomain.com for prod)
CORS_ORIGIN=http://localhost:3001

# Better Auth Configuration
# Generate a secure random string for production
BETTER_AUTH_SECRET=your-secure-random-secret-here
# Base URL where your API is running
BETTER_AUTH_URL=http://localhost:3000

# Cloudflare R2 Configuration (for image uploads)
# Get these from Cloudflare R2 dashboard
CLOUDFLARE_ACCOUNT_ID=your-cloudflare-account-id
R2_ACCESS_KEY_ID=your-r2-access-key-id
R2_SECRET_ACCESS_KEY=your-r2-secret-access-key

# Node Environment
NODE_ENV=development